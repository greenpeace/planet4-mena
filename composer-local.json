{
	"name": "planet4-mena/planet4-mena",
	"description": "Planet4 GP Mena website configuration",
	"license": "MIT",
	"require": {
		"greenpeace/planet4-child-theme-mena" : "0.0.*",
		"wpackagist-plugin/wordpress-importer":"0.6.4",
		"greenpeace/planet4-plugin-migrated-urls": "0.0.1",
		"greenpeace/planet4-master-theme" : "dev-release/v1.24.0"
	},

	"scripts": {
		"core:language": "wp language core install ar; wp language core activate ar",
		"install:plugin-wpimport": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wp-all-import-pro_4.5.4.zip",
		"install:plugin-wpml": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/sitepress-multilingual-cms.4.0.6.zip",
		"install:plugin-wpml-management": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-translation-management.2.6.6.zip",
		"install:plugin-wpml-allimport": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-all-import.2.0.5.zip",		

		"site:custom": [
			"@core:language",
			"@install:plugin-wpimport",
			"@install:plugin-wpml",
			"@install:plugin-wpml-management",
			"@install:plugin-wpml-allimport"
		]
	}
}
